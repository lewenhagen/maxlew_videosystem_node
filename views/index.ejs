  <script> 
    let menuTitle = document.getElementById("menuTitle")
    let menuContent = document.getElementById("menuContent")

    document.addEventListener("keydown", function(event) {
    let key = event.key
    switch (key) {
      case "*":
        // shutdown
        window.location.href = "/shutdown"
        break
      case "-":
        // refresh camera list
        break
      case "+":
        // main menu
        break
      case "1":
        // delay single cam
        window.location.replace("/singlecam", true)
        break
      case "2":
        // delay singlecam quadview
        window.location.replace("/singlecam-quad", true)
        break
      case "3":
        // delay doublecam
        window.location.replace("/doublecam", true)
        break
      case "9":
        // Easteregg
        new Audio('sound/tf.mp3').play()
        break
      }
    })
