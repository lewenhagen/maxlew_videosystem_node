<!DOCTYPE html>
  <style>

    html,body {
      margin: 0;
      padding: 0;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      background-color: black;
    }

    .fullscreen-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
      display: block;
    }

  </style>
<body>
    <img class="fullscreen-image" id="stream" alt="Cam feed" />
</body>
  <script type="module">
    const sleep = ms => new Promise(resolve => setTimeout(resolve, ms))
    const delay = Math.min(parseInt('<%= delay %>'), 36)
    const url = '<%= url %>'

    const updateStreamSrc = async (delay, url) => {
      const streamElement = document.getElementById("stream")

      if (delay > 0) {
        for (let i = delay; i > 0; i--) {
          streamElement.src = `img/hourglass/${i}.jpg`
          await sleep(1000)
        }
        streamElement.src = `http://localhost:3000/stream/stream1/${delay}`
      } else {
        streamElement.src = url
      }
    }

    updateStreamSrc(delay, url)

    document.addEventListener("keydown", function(event) {
      let key = event.key
      if (key == "+") {
        window.location.replace("/", true)
      }
    })
  </script>
