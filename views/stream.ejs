<!DOCTYPE html>
  <style>
    .fullscreen > img {
        width: 100%;
        height: 100%;
    }
  </style>
<body>
  <div class="fullscreen">
    <img id="stream" alt="Cam feed" /> 
  </div>
</body>
  <script type="module">
    const sleep = ms => new Promise(resolve => setTimeout(resolve, ms))
    const delay = Math.min(parseInt('<%= delay %>'), 36)
    const url = '<%= url %>'

    const updateStreamSrc = async (delay, url) => {
      const streamElement = document.getElementById("stream")

      if (delay > 0) {
        for (let i = delay; i > 0; i--) {
          streamElement.src = `img/hourglass/${i}.jpg`
          await sleep(1000)
        }
        streamElement.src = `http://localhost:3000/stream/stream1/${delay}`   
      } else {
        streamElement.src = url
      }
    }

    updateStreamSrc(delay, url)

    document.addEventListener("keydown", function(event) {
      let key = event.key
      if (key == "+") {
        window.location.replace("/", true)
      }
    })
  </script>